<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogInActivity">


    <EditText
        android:id="@+id/edit_account"
        android:layout_width="385sp"
        android:layout_height="54sp"
        android:background="#80FFFFE0"
        android:digits="@string/register_name_digits"
        android:hint="输入您的КГБ工号"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232">

    </EditText>

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="385sp"
        android:layout_height="54sp"
        android:background="#80FFFFE0"
        android:hint="输入您的КГБ密匙"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edit_account"
        app:layout_constraintVertical_bias="0.289">

    </EditText>

    <VideoView

        android:id="@+id/video_02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </VideoView>

    <ImageView
        android:id="@+id/facebook"
        android:layout_width="47sp"
        android:layout_height="47sp"
        android:layout_marginStart="64dp"
        android:src="@mipmap/facebook"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        app:layout_constraintVertical_bias="0.162">

    </ImageView>

    <ImageView
        android:id="@+id/google"
        android:layout_width="45sp"
        android:layout_height="45sp"

        android:layout_marginStart="40sp"
        android:src="@mipmap/google"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/social"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        app:layout_constraintVertical_bias="0.166">

    </ImageView>

    <ImageView
        android:id="@+id/social"
        android:layout_width="43sp"
        android:layout_height="43sp"
        android:layout_marginStart="40sp"
        android:src="@mipmap/social"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/facebook"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        app:layout_constraintVertical_bias="0.166">

    </ImageView>

    <ImageView
        android:id="@+id/youtube"
        android:layout_width="45sp"
        android:layout_height="45sp"
        android:layout_marginStart="39sp"
        android:src="@mipmap/youtube"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/google"
        app:layout_constraintTop_toBottomOf="@+id/edit_password"
        app:layout_constraintVertical_bias="0.166">

    </ImageView>

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/btn_shape2"
        android:gravity="center"
        android:text="  开始肃反！"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/social"
        app:layout_constraintVertical_bias="0.178">

    </Button>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="还不是КГБ？立即注册"
        android:textColor="#2196F3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clear"
        app:layout_constraintVertical_bias="0.0">

    </TextView>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="240dp"
        android:text="        "
        android:textColor="#cd0000"
        app:layout_constraintBottom_toTopOf="@+id/edit_account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/video_02"
        app:layout_constraintVertical_bias="1.0">

    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>